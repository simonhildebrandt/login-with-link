{
  "name": "login-with-link",
  "version": "1.0.0",
  "description": "Dead-simple user authentication",
  "main": "index.js",
  "author": "Simon Hildebrandt <simonhildebrandt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "serve": "live-server --port=9000 dev/",
    "build": "yarn esbuild src/index.jsx --bundle --outfile=dev/index.js --define:ENV=\"'development'\"",
    "watch": "yarn esbuild src/index.jsx --bundle --outfile=dev/index.js --watch --define:ENV=\"'development'\"",
    "build_staging": "yarn esbuild src/index.jsx --bundle --outfile=public/index.js --define:ENV=\"'staging'\"",
    "build_prod": "yarn esbuild src/index.jsx --bundle --outfile=public/index.js--define:ENV=\"'production'\"",
    "deploy_functions": "firebase deploy --only functions",
    "deploy_hosting": "yarn build_prod && yarn firebase deploy --only hosting",
    "deploy_all": "yarn deploy_functions && yarn deploy_hosting",
    "setup_api": "firebase functions:config:set api.conf=\"something\"",
    "emulator": "firebase emulators:start --export-on-exit --import=./default_data",
    "setup_emulator": "cp -R default_data firebase_data"
  },
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@chakra-ui/icons": "^1.0.3",
    "@chakra-ui/react": "^1.1.0",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "axios": "^0.21.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "ejs": "^3.1.6",
    "ejs-lint": "^1.2.1",
    "esbuild": "^0.19.2",
    "firebase": "^10.3.0",
    "framer-motion": "^3.1.1",
    "live-server": "^1.2.1",
    "navigo": "7.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-markdown": "^5.0.3",
    "watchify": "^3.11.1"
  },
  "devDependencies": {
    "firebase-tools": "^12.5.2"
  }
}
